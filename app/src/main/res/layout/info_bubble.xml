<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bonuspack_bubble">
    <ImageView android:id="@+id/bubble_image"
        android:layout_width="70dp"
        android:layout_height="79dp"
        android:visibility="gone"
        android:contentDescription="@string/descripcion"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/bubble_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:maxEms="17"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="@string/titulo"
                android:textStyle="bold"/>
            <Button android:id="@+id/boton_ruta"
                android:visibility="gone"
                android:layout_margin="3dp"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_weight="0"
                android:background="@drawable/btn_routing"/>
            <Button android:id="@+id/boton_mas_informacion"
                android:layout_margin="3dp"
                android:visibility="gone"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="end"
                android:layout_weight="0"
                android:background="@drawable/btn_moreinfo" />
        </LinearLayout>
        <TextView android:id="@+id/bubble_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:maxEms="17"
            android:text="@string/descripcion"
            android:maxLines="2"
            android:ellipsize="end"/>
        <TextView android:id="@+id/bubble_subdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10sp"
            android:maxEms="17"
            android:text="@string/subdescripcion"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>